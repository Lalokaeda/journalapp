@model List<Student>
@{
    ViewData["Title"] = "Список Студентов";
}

<div class="card win">
<h1> @ViewData["Title"]</h1>
 <div class="card-body">
    <table class="table table-hover table-bordered"><thead>
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Пол</th>
        <th>Номер телефона</th>
        <th>E-mail</th>
        <th>Примечание</th>
    </tr>
</thead>
<tbody>
   @foreach (var student in Model)
   {
    <tr>
        <td>@student.Surname</td>
        <td>@student.Name</td>
        @if(student.Patronymic!=null){
            <td>@student.Patronymic</td>
        }
        else 
        {
            <td></td>
        }
        <td>@student.Sex</td>
        <td>@student.PhoneNum</td>
        <td>@student.Email</td>
         @if(student.Note!=null){
            <td>@student.Note</td>
        }
        else 
        {
            <td></td>
        }
        <td class="text-center">
    <a class="btn btn-secondary" asp-area="" asp-controller="Student" asp-route-Id="@student.Id" asp-action="Create">Редактировать</a>
    @if (!student.IsExpelled){
 <a class="btn btn-red" asp-area="" asp-controller="Student" asp-route-Id="@student.Id" asp-action="Create">Отчислен</a>
    }
        </td>
    </tr>
   }

</tbody>
</table>
<div class="text-right btn-right">
<a class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="Create">Добавить студента</a>
</div>

</div>
</div>
