@model Student
@{
    ViewData["Title"] = "Добавить студента";
}

<div class="card win">
<h1> @ViewData["Title"]</h1>
 <div class="card-body">
    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text " for="inputGroupSelect02">Группа</label>
  </div>
  <select class="custom-select" id="inputGroupSelect02">
    <option selected></option>
    <option value="1">Исп-19-3</option>
    <option value="2">Исп-19-4</option>
  </select>
</div>
    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Surname">Фамилия</label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Surname">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Name">Имя</label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Name">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Patronymic">Отчество</label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Patronymic">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text " for="inputGroupSelect01" asp-for="Sex">Пол</label>
  </div>
  <select class="custom-select" id="inputGroupSelect01" asp-for="Sex">
    <option selected></option>
    <option value="М">М</option>
    <option value="Ж">Ж</option>
  </select>
</div>
  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input" asp-for="IsCommerce">
    </div>
  </div>
  <label asp-for="IsCommerce">Коммерция</label>
</div>
  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input" asp-for="IsExpelled">
    </div>
  </div>
  <label asp-for="IsExpelled">Отчислен</label>
</div>
  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Note">Примечание</label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Note">
</div>
<div class="text-right btn-right">
<a class="btn btn-primary" asp-action="StudentList">Отмена</a>
<input type="submit" class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="Create" value="Сохранить">
</div>

</div>
</div>