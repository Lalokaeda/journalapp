@model journalapp.ViewModels.StudentViewModel
@{
  if(Model==null)
    ViewData["Title"] = "Добавление студента";
  else
    ViewData["Title"] = "Редактирование студента";
}
<form method="post" asp-action="Create">
  <input asp-for="Student.Id" hidden/>
  <input asp-for="Student.HealthGroupId" hidden/>
    <input asp-for="Student.PositionId" hidden/>
<div class="card win">

<h1> @ViewData["Title"]</h1>

 <div class="card-body">

    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text " asp-for="Student.GroupId"></label>
  </div>
  <select class="custom-select" asp-for="Student.GroupId" asp-items="@ViewBag.GroupsDropDown">
    <option disabled selected></option>
  </select>
</div>
<span asp-validation-for="Student.GroupId" class="text-danger"></span>

    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.Surname"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.Surname">
</div>
   <span asp-validation-for="Student.Surname" class="text-danger"></span>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.Name"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.Name">
</div>
   <span asp-validation-for="Student.Name" class="text-danger"></span>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.Patronymic"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.Patronymic">
</div>
   

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text " asp-for="Student.Sex"></label>
  </div>
  <select class="custom-select" asp-for="Student.Sex">
    <option disabled selected></option>
    <option value="М">М</option>
    <option value="Ж">Ж</option>
  </select>
</div>
<span asp-validation-for="Student.Sex" class="text-danger"></span>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.Address"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.Address">
</div>
<span asp-validation-for="Student.Address" class="text-danger"></span>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.PhoneNum"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.PhoneNum" id="Phone">
</div>
<span asp-validation-for="Student.PhoneNum" class="text-danger"></span>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.Email"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.Email" asp->
</div>

  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input" asp-for="Student.IsCommerce">
    </div>
  </div>
  <label asp-for="Student.IsCommerce"></label>
</div>

  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text form-controlRed" asp-for="Student.Note"></label>
  </div>
  <input type="text" class="form-control form-controlRed" asp-for="Student.Note">
</div>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text " asp-for="Student.RoomId"></label>
  </div>
  <select class="custom-select" asp-for="Student.RoomId" asp-items="@ViewBag.RoomsDropDown">
    <option selected></option>
  </select>
</div>

<div class="text-right btn-right">
<a class="btn btn-primary" asp-action="StudentList">Отмена</a>
<input type="submit" class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="Create" value="Сохранить">
</div>

</div>
</div>
</form>

@section Scripts{
  @{<partial name ="_ValidationScriptsPartial"/>}
}