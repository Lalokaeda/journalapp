@model journalapp.ViewModels.PositionsViewModel
@{
    ViewData["Title"] = "Добавление студента на должность";
}
<form method="post" asp-action="AddStudentOnPosition">
     <input asp-for="CurStudent.GroupId" hidden/>
  <input asp-for="CurStudent.Surname" hidden/>
  <input asp-for="CurStudent.Name" hidden/>
  <input asp-for="CurStudent.Patronymic" hidden/>
  <input asp-for="CurStudent.Sex" hidden/>
  <input asp-for="CurStudent.Address" hidden/>
  <input asp-for="CurStudent.PhoneNum" hidden/>
  <input asp-for="CurStudent.Email" hidden/>
  <input asp-for="CurStudent.IsCommerce" hidden/>
  <input asp-for="CurStudent.Note" hidden/>
    <input asp-for="CurStudent.HealthGroupId" hidden/>
    <input asp-for="CurStudent.RoomId" hidden/>
    <input asp-for="Position.Id" hidden>
    <input asp-for="Position.Name" hidden>
<div class="card win">

<h1> @ViewData["Title"]</h1>

 <div class="card-body">
    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text " asp-for="Position.Name">@Model.Position.Name</label>
  </div>
  <select class="custom-select" asp-for="CurStudent.Id" asp-items="@Model.StudentsSelectList">
    <option disabled selected>Выберите студента</option>
  </select>
</div>


<div class="text-right btn-right">
<a class="btn btn-primary" asp-action="PositionsList">Отмена</a>
<input type="submit" class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="AddStudentOnPosition" value="Сохранить">
</div>

</div>
</div>
</form>

@section Scripts{
  @{<partial name ="_ValidationScriptsPartial"/>}
}